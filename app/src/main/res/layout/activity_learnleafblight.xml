<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Learnleafblight">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_margin="25dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/leafb" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Leaf Blight"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="The oval-shaped, tan or brown lesions on the leaves of onion stemphylium plants might seem water-soaked and darker as they grow. These lesions have the ability to grow larger and engulf whole leaves, as well as surround crop stems. The bulb may be compromised by blighted leaves, which could decrease production and cause infections afterwards."
                android:justificationMode="inter_word"
                android:textSize="12dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="-14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#AAC8A7"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/purple"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/bug"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ladybug_6420665_5298152" />

                <TextView
                    android:id="@+id/fatality"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Disease Fatality"
                    android:textAlignment="center"
                    android:textColor="#2E2E2E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fatalitytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat_italic"
                    android:text="Up to 74% premature plant mortality when disease was severe"
                    android:textAlignment="center"
                    android:textColor="@color/black" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFA1F5"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/lightbluee">


                <ImageView
                    android:id="@+id/clover"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/four_leaf_clover_3d_icon" />

                <TextView
                    android:id="@+id/symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Early Symptoms"
                    android:textAlignment="center"
                    android:textColor="#2E2E2E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/symptomstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat_italic"
                    android:text="Yellow-tan, water-soaked lesions developing into elongated spots"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/cardgreenbg">


                <ImageView
                    android:id="@+id/cloud"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/pngtree_3d_white_clouds_illustration_png_image_6478630" />

                <TextView
                    android:id="@+id/clyle"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Disease Cycle"
                    android:textAlignment="center"
                    android:textColor="#2E2E2E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cycletext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat_italic"
                    android:text="Sources produce spores in late spring and summer that are wind-dispersed to other plants and fields."
                    android:textAlignment="center"
                    android:textColor="@color/black" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/ly">


                <ImageView
                    android:id="@+id/sun"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/sun" />

                <TextView
                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Weather Condition"
                    android:textAlignment="center"
                    android:textColor="#2E2E2E"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/conditiontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/montserrat_italic"
                    android:text=" Leaf Blight is most often a problem in cool (10 C to 24 C), wet weather when the leaves remain wet for extended periods."
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menubottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menubottom_navigation" />
</RelativeLayout>